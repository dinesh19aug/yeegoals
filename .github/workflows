name: Render PlantUML

on:
  push:
    branches:
      - main

jobs:
  render:
    runs-on: ubuntu-latest
    steps:
      - name: Checkout code
        uses: actions/checkout@v2

      - name: Install PlantUML
        run: sudo apt-get install plantuml

      - name: Render UML diagrams
        run: plantuml *.puml
